<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/memory_list_item_starredCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="4dp"
        android:focusable="false"/>
    <TextView

        android:id="@+id/memory_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/memory_list_item_starredCheckBox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:text="aaa"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/memory_list_item_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/memory_list_item_titleTextView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:text="bbb"
        android:textColor="#ffffff"/>


</RelativeLayout>